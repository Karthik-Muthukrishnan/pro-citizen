<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    
    <%= f.hidden_field :area_id%>
  </div>
  <div style = "float: right">
   <%= f.submit "Post", class: "btn btn-small btn-primary" %>
  </div>
<% end %>