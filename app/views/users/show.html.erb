<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
        <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.posts.any? %>
      <h2>Posts (<%= @user.posts.count %>)</h2>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>